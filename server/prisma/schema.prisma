generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Mystery {
  id        String   @id @default(cuid())
  title     String
  clues     String
  suspects  String[]
  locations String[]
  weapons   String[]
  tags      String[]
  solutionSuspect  String?
  solutionLocation String?
  solutionWeapon   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  gridStates GridState[]
  draft      MysteryDraft?
  checklist  ClueChecklist?
}

model GridState {
  id        String   @id @default(cuid())
  mysteryId String
  mode      String
  rows      Int
  cols      Int
  cells     Json
  updatedAt DateTime @updatedAt

  mystery Mystery @relation(fields: [mysteryId], references: [id], onDelete: Cascade)

  @@unique([mysteryId, mode])
}

model MysteryDraft {
  id        String   @id @default(cuid())
  mysteryId String   @unique
  data      Json
  updatedAt DateTime @updatedAt

  mystery Mystery @relation(fields: [mysteryId], references: [id], onDelete: Cascade)
}

model ClueChecklist {
  id        String   @id @default(cuid())
  mysteryId String   @unique
  items     Json
  updatedAt DateTime @updatedAt

  mystery Mystery @relation(fields: [mysteryId], references: [id], onDelete: Cascade)
}
